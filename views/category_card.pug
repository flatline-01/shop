each item in categories
    div(class='col-sm-10 col-md-3 p-4 category_card')
        a(href=`/category/${item.id}` class='position-relative')
            img(src=`data:image/png;base64,${item.goods[0].images[Object.keys(item.goods[0].images)[0]]}` class='category_card-bike w-100' alt=`${item.name} bike`)
            img(src=`data:image/png;base64,${item.sliderImage}` class='w-100 category_card-bg' alt=`picture of the ${item.name} bicycle category`)
            h3(class='smaller-title') #{item.name.toUpperCase()}